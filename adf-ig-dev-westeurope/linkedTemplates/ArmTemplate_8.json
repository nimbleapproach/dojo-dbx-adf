{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "adf-ig-dev-westeurope"
		},
		"TR_SCHEDULE_DAILY_properties_runtimeState": {
			"type": "string",
			"defaultValue": "Started"
		},
		"TR_SCHEDULE_DAILY_properties_PL_00_MASTER_parameters_pm_FullLoad": {
			"type": "bool",
			"defaultValue": false
		},
		"TR_SCHEDULE_DAILY_startTime": {
			"type": "string",
			"defaultValue": "2023-07-26T00:00:00"
		},
		"TR_SCHEDULE_DAILY_hrs": {
			"type": "int",
			"defaultValue": 2
		},
		"TR_SCHEDULE_DAILY_weekDays": {
			"type": "array",
			"defaultValue": [
				"Monday",
				"Tuesday",
				"Wednesday",
				"Thursday",
				"Friday"
			]
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/TR_SCHEDULE_DAILY')]",
			"type": "Microsoft.DataFactory/factories/triggers",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"runtimeState": "[parameters('TR_SCHEDULE_DAILY_properties_runtimeState')]",
				"pipelines": [
					{
						"pipelineReference": {
							"referenceName": "PL_00_MASTER",
							"type": "PipelineReference"
						},
						"parameters": {
							"pm_FullLoad": "[parameters('TR_SCHEDULE_DAILY_properties_PL_00_MASTER_parameters_pm_FullLoad')]"
						}
					}
				],
				"type": "ScheduleTrigger",
				"typeProperties": {
					"recurrence": {
						"frequency": "Week",
						"interval": 1,
						"startTime": "[parameters('TR_SCHEDULE_DAILY_startTime')]",
						"timeZone": "W. Europe Standard Time",
						"schedule": {
							"hours": [
								"[parameters('TR_SCHEDULE_DAILY_hrs')]"
							],
							"weekDays": "[parameters('TR_SCHEDULE_DAILY_weekDays')]"
						}
					}
				}
			},
			"dependsOn": []
		}
	]
}